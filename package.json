{
    "name": "universal-marriott-directory-scraper",
    "version": "2.0.0",
    "type": "module",
    "description": "Universal Marriott Directory Scraper - Strategy-based scraper for all Marriott brands",
    "dependencies": {
        "apify": "^3.4.2",
        "crawlee": "^3.13.8",
        "puppeteer": "24.11.1"
    },
    "devDependencies": {
        "@apify/eslint-config": "^1.0.0",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "prettier": "^3.5.3"
    },
    "scripts": {
        "start": "node src/main.js",
        "dev:ritzcarlton": "node src/main.js --targetUrl=https://www.ritzcarlton.com/en/hotels/ --brandKey=ritzcarlton",
        "dev:stregis": "node src/main.js --targetUrl=https://st-regis.marriott.com/hotels/ --brandKey=stregis",
        "dev:marriottMain": "node src/main.js --targetUrl=https://marriott-hotels.marriott.com/locations/ --brandKey=marriottMain",
        "dev:generic": "node src/main.js --targetUrl=https://www.sheraton.com/en/hotels/ --brandKey=generic",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "node src/utils/urlHelpers.test.js"
    },
    "author": "Development Team",
    "license": "ISC"
}
